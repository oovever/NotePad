<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:id="@+id/dialog_free_1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/transparent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bus_butn_white_nor"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="18dp"
                android:text="提示"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_divide_line"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dialog_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="是是是是"
                android:textColor="@color/app_text_black"
                android:textSize="14sp"
                android:visibility="gone"/>

            <FrameLayout
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone">
            </FrameLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/app_divide_line"/>

            <LinearLayout
                android:id="@+id/layout_btn_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_cancle"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn"
                    android:text="取消"
                    android:textColor="#2F8AEA"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <View
                    android:id="@+id/view_dialog_split"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/app_divide_line"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_btn"
                    android:text="确认"
                    android:textColor="#2F8AEA"
                    android:textSize="16sp"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/dialog_free_2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/transparent"/>

</LinearLayout>